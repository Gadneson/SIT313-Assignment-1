<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assignment111.NewTaskPage">
    <ContentPage.Content>
        <StackLayout Margin="10,10,10,0">
            <Entry x:Name="taskEntry" Placeholder="Enter Task Name"/>
            <Entry x:Name="timeEntry" Placeholder="Enter Task Time"/>
            <Switch />
            <Entry x:Name="noteEntry" Placeholder="Enter Task Note"/>
            <Button Text="Save"
                    Clicked="Button_Clicked"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>